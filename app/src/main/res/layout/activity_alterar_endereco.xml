<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="br.ufrpe.brunna.adminnomades.endereco.gui.AlterarEndereco">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:textSize="20dp"
            android:text="Editar Endereço"
            android:gravity="center"/>
        <TextView
            android:id="@+id/nomeEditarEnderecoId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/ruaEditarId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Rua"/>

        <EditText
            android:id="@+id/numeroEditarId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Numero" />

        <EditText
            android:id="@+id/cidadeEditarId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Cidade"/>

        <Button
            android:layout_marginTop="10dp"
            android:id="@+id/botaoEditarEnderecoId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="EDITAR ENDEREÇO"/>
        <Button
            android:id="@+id/botaoDeletarEnderecoId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="DELETAR ENDEREÇO"/>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>

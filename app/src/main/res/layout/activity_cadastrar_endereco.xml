<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="br.ufrpe.brunna.adminnomades.endereco.gui.CadastrarEndereco">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="10dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:textSize="20dp"
            android:text="Cadastrar EndereÃ§o"
            android:gravity="center"/>
        <TextView
            android:id="@+id/nomeRegistroEnderecoId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <EditText
            android:id="@+id/ruaRegistroId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Rua"/>
        <EditText
            android:id="@+id/numeroRegistroId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Numero"/>
        <EditText
            android:id="@+id/cidadeRegistroId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Cidade"/>
        <Button
            android:layout_marginTop="10dp"
            android:id="@+id/botaoRegistroEnderecoId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="REGISTRAR"/>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>

<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="br.ufrpe.brunna.adminnomades.pessoa.gui.CadastrarPerfilActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="10dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:textSize="20dp"
            android:text="Cadastrar Perfil"
            android:gravity="center"/>
        <EditText
            android:id="@+id/nomeRegistroId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nome"/>
        <EditText
            android:id="@+id/telefoneRegistroId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Telefone"/>
        <EditText
            android:id="@+id/emailRegistroId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Email"/>
        <Button
            android:layout_marginTop="10dp"
            android:id="@+id/botaoRegistroPerfilId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Cadastrar"/>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>

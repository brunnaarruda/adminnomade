<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="br.ufrpe.brunna.adminnomades.pessoa.gui.EditarPerfilActivity">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_margin="10dp">
    <EditText
        android:id="@+id/nomeEditarId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nome"/>
    <EditText
        android:id="@+id/cpfEditarId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="CPF"/>
    <EditText
        android:id="@+id/telefoneEditarId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Telefone"/>
    <EditText
        android:id="@+id/emailEditarId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Email"/>
    <Button
        android:id="@+id/botaoAlterarPerfilId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Alterar"/>
</LinearLayout>
</android.support.constraint.ConstraintLayout>
